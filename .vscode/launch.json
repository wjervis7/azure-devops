    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost (firefox)",
            "type": "firefox",
            "request": "launch",
            "reAttach": false,
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "dev"
        },
        {
            "name": "Launch localhost (chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "dev"
        }
    ]
}